FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale 1;

defaultFieldValues
(
    volScalarFieldValue alpha.water 0//only air in the domain
    volVectorFieldValue U (0 0 0) // reset velocity in the whole domain
    volScalarFieldValue p_rgh 0//
);

regions
(
    sphereToCell
    {
        centre (0 0 #eval "0.00125+2*2e-5");
        radius 0.00125;
        fieldValues
        (
            volScalarFieldValue alpha.water 1//we set our sphere of water into the domain
            volVectorFieldValue U (0 0 -0.48) //JM: This is the initial velocity of the droplet, an estimate of its free-fall terminal velocity
        );
    }
);


// ************************************************************************* //
